<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_login_background"
    android:elevation="10dp"
    >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:src="@drawable/background"
         android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/activity_margin_extra_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_27"
                    android:id="@+id/tvDay"
                    android:layout_gravity="center"
                    android:paddingRight="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/activity_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="May, 2020"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"
                    android:id="@+id/tvYear" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="05:45 PM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"
                    android:id="@+id/tvTime" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello Mam"
            android:paddingLeft="@dimen/edittext_padding"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_color_black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="How are you"
            android:paddingLeft="@dimen/edittext_padding"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_color_black"/>





    </LinearLayout>






</RelativeLayout>
</androidx.cardview.widget.CardView>